 <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        <CheckBox
    	    android:id="@+id/ch_RequestPass"
    	    android:checked="true"
    	    android:text="@string/msg_RequestPass"
    	    style="@style/TextDynamicTabCheckBox" />
        <!-- Passcode -->
        <TextView
        	android:id="@+id/tv_Passcode"
        	android:text="@string/msg_EnterYourPasscode"
        	android:textIsSelectable="true"
        	style="@style/TextDynamicTabLabel" />
        
        <EditText
    	    android:id="@+id/et_Passcode"
    	    style="@style/TextDynamicTabEditText"
    	    android:layout_width="match_parent"
    	    android:inputType="phone"
        	android:password="true"
        	android:digits="1234567890"
        	android:maxLength="4" />
        
		<TextView
        	android:id="@+id/tv_Re_Passcode"
        	android:text="@string/msg_ReEnterYourPasscode"
        	android:textIsSelectable="true"
        	style="@style/TextDynamicTabLabel" />
        
        <EditText
    	    android:id="@+id/et_Re_Passcode"
    	    style="@style/TextDynamicTabEditText"
    	    android:layout_width="match_parent"
    	    android:inputType="phone"
        	android:password="true"
        	android:digits="1234567890"
        	android:maxLength="4" />
    	
    	<!-- Language -->
    	<TextView
        	android:id="@+id/tv_Language"
        	android:text="@string/Language"
        	android:textIsSelectable="true"
        	style="@style/TextDynamicTabLabel" />
    	
    	<Spinner
        	android:id="@+id/sp_Language"
        	style="@style/TextDynamicTabSpinner"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content" />
    	<!-- Log Level -->
    	<TextView
        	android:id="@+id/tv_LogLevel"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:text="@string/LogLevel" />
    		
    	<Spinner 
    	    android:id="@+id/sp_LogLevel"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:entries="@array/ArrayLogLevel" />
    		
    	<CheckBox
    	    android:id="@+id/ch_SaveSD"
    	    android:layout_width="wrap_content"
    	    android:layout_height="wrap_content"
    	    android:checked="false"
    	    android:text="@string/SaveSD" />
    	
    	<!-- Load Default Data -->
    	<CheckBox
    	    android:id="@+id/ch_LoadTestData"
    	    android:layout_width="wrap_content"
    	    android:layout_height="wrap_content"
    	    android:checked="false"
    	    android:text="@string/LoadTestData"/>
    	
    	<Button
    	    android:id="@+id/butt_DropDB"
    	    android:layout_width="wrap_content"
    	    android:layout_height="wrap_content"
    	    android:text="@string/DropDB" />
    	
    </TableLayout>
</ScrollView>