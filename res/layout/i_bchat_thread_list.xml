 <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/img_Contact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:contentDescription="@string/None"
        android:src="@drawable/contruction_h" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:baselineAligned="false"
        android:weightSum="2" >
		<LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="vertical"
	        android:layout_weight="0.4" >
	
	        <TextView
		        android:id="@+id/tv_Name"
		        android:gravity="center_vertical"
		        style="@style/TextTitleList_BChat_Thread_List"
		        android:text="@string/Name"
		        android:maxLines="1" />
	
	    	<TextView
	        	android:id="@+id/tv_Conversation"
	        	android:gravity="center_vertical"
	        	style="@style/TextItemList_BChat_Thread_List"
	        	android:text="@string/Description" />
	    </LinearLayout>
	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="vertical"
	        android:layout_weight="1.5" >
	
	        <TextView
		        android:id="@+id/tv_Time"
		        style="@style/TextItemList_BChat_Thread_List"
		        android:text="@string/TimeOfEvent"
		        android:gravity="start"
		        android:maxLines="1" />
	
	    	<TextView
	    	    android:id="@+id/tv_Status"
	    	    style="@style/TextItemList_BChat_Thread_List"
	    	    android:layout_width="match_parent"
	    	    android:gravity="end"
	    	    android:maxLines="1"
	    	    android:text="@string/msg_Ok" />

	    </LinearLayout>
    </LinearLayout>
</LinearLayout>