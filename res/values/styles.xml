    <!-- Color -->
    <style name="TextColor">
    	<item name="android:textColor">@android:color/black</item>
    </style>
    
    <!-- Error Color -->
    <style name="TextColorError">
    	<item name="android:textColor">@android:color/holo_red_dark</item>
    </style>
    
    <!-- Text -->
    <!-- Standard Text -->
    <style name="TextStandard" parent="TextColor" >
        <item name="android:padding">0dip</item>
        <item name="android:layout_width">wrap_content</item>
	    <item name="android:layout_height">wrap_content</item>
    </style>
    
    <style name="EditTextStandard" parent="TextStandard" >
        <item name="android:background">@android:color/background_light</item>
    </style>
    
    <!-- Standard Error Text -->
    <style name="TextStandardError" parent="TextColorError" >
        <item name="android:padding">0dip</item>
        <item name="android:layout_width">wrap_content</item>
	    <item name="android:layout_height">wrap_content</item>
    </style>
    
    <!-- Text Summary -->
    <style name="TextSummary" parent="TextStandard">
        <item name="android:textSize">@dimen/fontSizeMedium</item>
    </style>
   	
    <!-- Text Menu -->
    <style name="TextItemMenu" parent="TextStandard">
        <item name="android:textSize">@dimen/fontSizeMedium</item>
    </style>
    
    <!-- Small Text Menu -->
    <style name="TextItemSmallMenu" parent="TextStandard">
        <item name="android:textSize">@dimen/fontSizeSmall</item>
    </style>
    
    <!-- Text Report  -->    
    <style name="TextItemReport" parent="TextStandard">
        <item name="android:textSize">@dimen/fontSizeMedium</item>
    </style>
    
    <!-- Dynamic Tab Label -->
    <style name="TextDynamicTabLabel" parent="TextStandard">
        <item name="android:textSize">@dimen/fontSizeSmall</item>
    </style>

    <!-- Dynamic Tab Values for Edit Text -->
    <style name="TextDynamicTabEditText" parent="TextStandard">
        <item name="android:textSize">@dimen/fontSizeMedium</item>
        <item name="android:layout_height">@dimen/editText_layout_height</item>
    </style>
    
    <!-- Dynamic Tab Values for Spinner -->
    <style name="TextDynamicTabSpinner">
        <item name="android:textSize">@dimen/fontSizeMedium</item>
        <item name="android:layout_height">@dimen/spinner_layout_height</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <!-- Dynamic Tab Values for Spinner  -->
    <style name="TextDynamicTabSpinnerDropDown" parent="TextDynamicTabSpinner">
        <item name="android:padding">2dp</item>
    </style>
    
    <!-- Dynamic Tab Values for List -->
    <style name="TextDynamicTabList">
        <item name="android:textSize">@dimen/fontSizeMedium</item>
        <item name="android:layout_height">@dimen/editText_layout_height</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">2dp</item>
    </style>

    <!-- CheckBox Dynamic Tab Values For CheckBox -->
    <style name="TextDynamicTabCheckBox">
        <item name="android:textSize">@dimen/fontSizeMedium</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_height">@dimen/checkBox_layout_height</item>
        <item name="android:layout_width">match_parent</item>
    </style>
    
    <!-- Dynamic Tab Values for Search -->
    <style name="TextDynamicTabEditTextSearch" parent="TextDynamicTabEditText">
        <item name="android:gravity">end|center_vertical</item>
        <item name="android:focusable">false</item>
		<item name="android:focusableInTouchMode">false</item>
		<item name="android:clickable">false</item>
		<item name="android:layout_height">@dimen/editText_layout_height</item>
    </style>
    
    <!-- Text Dynamic Tab Values for Button Search -->
    <style name="TextDynamicTabButtonSeach">
        <item name="android:layout_width">@dimen/button_layout_width</item>
        <item name="android:layout_height">@dimen/button_layout_height</item>
    </style>
    
    
