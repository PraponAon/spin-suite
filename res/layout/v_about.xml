<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
   	<ImageView
   	    android:id="@+id/img_logoERP"
   	    android:layout_width="wrap_content"
   	    android:layout_height="wrap_content"
   	    android:contentDescription="@string/None"
   	    android:src="@drawable/logo_erp" />

   	<TextView
        android:id="@+id/tv_AppName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/app_name" />
   	<TextView
   	    android:id="@+id/tv_app_description"
   	    android:layout_width="match_parent"
   	    android:layout_height="wrap_content"
   	    android:gravity="center_horizontal"
   	    android:text="@string/app_description" />
   	<TextView
   	    android:id="@+id/tv_url_erp"
   	    android:layout_width="match_parent"
   	    android:layout_height="wrap_content"
   	    android:autoLink="web"
   	    android:gravity="center_horizontal"
   	    android:textColorLink="@color/abc_search_url_text"
   	    android:text="@string/app_web_erp" />
   	<TextView
   	    android:id="@+id/tv_url_spin_suite"
   	    android:layout_width="match_parent"
   	    android:layout_height="wrap_content"
   	    android:autoLink="web"
   	    android:gravity="center_horizontal"
   	    android:textColorLink="@color/abc_search_url_text"
   	    android:text="@string/app_adempiere_spin_suite" />
   	<TextView
   	    android:id="@+id/tv_url_spin_suite_project"
   	    android:layout_width="match_parent"
   	    android:layout_height="wrap_content"
   	    android:autoLink="web"
   	    android:gravity="center_horizontal"
   	    android:textColorLink="@color/abc_search_url_text"
   	    android:text="@string/app_adempiere_spin_suite_project" />   	
   	<TextView
   	    android:id="@+id/tv_contact"
   	    android:layout_width="match_parent"
   	    android:layout_height="wrap_content"
   	    android:autoLink="email"
   	    android:gravity="center_horizontal"
   	    android:textColorLink="@color/abc_search_url_text"
   	    android:text="@string/app_mail_contact" />
   	
    <TextView
        android:id="@+id/tv_AppVersionName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/app_version_name" />

    <TextView
        android:id="@+id/tv_AppVersionCode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/app_version_code" />
    
    <TextView
        android:id="@+id/tv_AppPermissions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/app_permissions" />

</LinearLayout>
