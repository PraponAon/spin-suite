<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_bc_contacts_list"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <EditText
        android:id="@+id/et_GroupName"
        style="@style/TextDynamicTabEditText"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bc_thread_editText_layout_height"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:ems="10"
        android:hint="@string/BChat_GroupName"
        android:inputType="textCapWords" >

    </EditText>
    
    <ListView
        android:id="@+id/lv_Contacts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/et_GroupName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" >

    </ListView>
</RelativeLayout>